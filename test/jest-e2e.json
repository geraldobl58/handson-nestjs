{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": [
    "<rootDir>/test/setup.ts"
  ],
  "testEnvironment": "node",
  "reporters": [
    "default",
    [
      "jest-sonar",
      {
        "outputDirectory": "coverage",
        "outputName": "e2e-test-report.xml"
      }
    ]
  ]
}